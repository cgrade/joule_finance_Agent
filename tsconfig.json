{
    "compilerOptions": {
      "target": "ES2023",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "declaration": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2023", "DOM"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "**/*.test.ts", "joule-finance-api"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }