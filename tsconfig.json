{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "declaration": true,
      "noImplicitAny": false
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "**/*.test.ts", "joule-finance-api"]
  }